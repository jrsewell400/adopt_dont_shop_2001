<h3>PETS INDEX</h3>

<% @pets.each do |pet| %>
  <section id="pet-<%= pet.id %>">
    <%= image_tag(pet.image, size: "200x200") %></br>
    Name: <%= pet.name %></br>
    Age: <%= pet.age %></br>
    Gender: <%= pet.sex %></br>
    Belongs to: <%= link_to pet.shelter.name, "/shelters/#{pet.shelter.id}" %></br>
    <%= link_to "Update Pet", "/pets/#{pet.id}/edit" %></br>
    <%= link_to "Delete Pet", "/pets/#{pet.id}", method: :delete %></br></br>
  </section>
<% end %>